<h1 class="title is-1">Series Cards</h1>

{# create macro #}
<div class="card recommendation-{{episode.data.recommendation}}">
    <header class="card-header">
        <p class="card-header-title">
            <a href="{{ episode.url }}">№ {{ episode.data.number }} {{ episode.data.title }}</a>
        </p>
        <p class="card-header-icon">{{ episode.data.date | readableDate }}</p>
    </header>
    <div class="card-content">
        <div class="content">
            <div class="columns">
                <div class="column is-one-third recommendation">
                    {% if episode.data.recommendation == 'yes' %}
                        <h1 class="title is-3 has-text-success">Listen</h1>
                    {% elif episode.data.recommendation == 'yes-timeloop' %}
                        <div>
                            <h1 class="title is-3 has-text-success">Listen</h1> 
                            <h2 class="subtitle is-5">
                                Time Loop (<a href="{{episode.data.time_loop_forward.url}}">№ {{episode.data.time_loop_forward.number}}</a>)
                            </h2>
                        </div>
                    {% elif episode.data.recommendation == 'essential' %}
                        <h1 class="title is-3 has-text-primary">Essential</h1>
                    {% elif episode.data.recommendation == 'essential-timeloop' %}
                        <div>
                            <h1 class="title is-3 has-text-primary">Essential</h1> 
                            <h2 class="subtitle is-5">
                                Time Loop (<a href="{{episode.data.time_loop_forward.url}}">№ {{episode.data.time_loop_forward.number}}</a>)
                            </h2>
                        </div>
                    {% elif episode.data.recommendation == 'no' %}
                        <h1 class="title is-3 has-text-danger">Skip</h1>
                    {% endif %}
                </div>
                <div class="column is-two-thirds content">
                    {{ episode.data.recommendation_reason | safe }}
                </div>
            </div>
        </div>
    </div>
    <footer class="card-footer">
        <a href="{{ episode.url }}" class="card-footer-item">
            {% set icon_name = 'book-open' %}
            {% include "_macros/icon.njk" %}
            &nbsp;
            Guide
        </a>
        <a href="{{ episode.data.podcast_url }}" class="card-footer-item">
            {% set icon_name = 'radio' %}
            {% include "_macros/icon.njk" %}
            &nbsp;
            Listen
        </a>
    </footer>
</div>

{# create macro #}
<div class="card season-card">
    <header class="card-header">
        <p class="card-header-title">
            <a href="/seasons/{{ season.data.seasonNumber }}">Season {{ season.data.seasonNumber }}</a>
        </p>
    </header>
    <div class="card-content content">
        {{ season.data.summary | safe }}
        <div class="level season-stats">
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Year</p>
                    <p class="title">{{season.data.year}}</p>
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Episodes</p>
                    <p class="title">{{season.data.count}}</p>
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Time Loops</p>
                    <p class="title">{{season.data.timeloops}}</p>
                </div>
            </div>
        </div>
    </div>
    <footer class="card-footer">
        {% set first = season.data.first %}
        {% set last = season.data.last %}
        {% include "_macros/rangeCardFooterItems.njk" %}
    </footer>
</div>



