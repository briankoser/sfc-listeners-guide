---
layout: baseNavBar
---
<section class="hero">
    <div class="hero-body">
        <div class="container">
            <h1 class="title is-1">Season {{seasonNumber}}</a></h1>
        </div>
    </div>
    <div class="hero-foot">
        <div class="level">
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Year</p>
                    <p class="title">{{year}}</p>
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Episodes</p>
                    <p class="title">{{count}}</p>
                </div>
            </div>
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Timeloops</p>
                    <p class="title">{{timeloops}}</p>
                </div>
            </div>
        </div>
    </div> 
</section>

