end of the year ballots

<div class="content">
    <article class="season-content">
    {{ layoutContent | safe }}
    </article>
</div>

<nav class="columns season-nav">
    <div class="column">
        <div class="tabs is-fullwidth">
            {% if previousSeason %}
            <ul>
                <li><a href="/seasons/{{ previousSeason }}">← Season {{ previousSeason }}</a></li>
            </ul>
            {% endif %}
        </div>
    </div>
    <div class="column">
        <div class="tabs is-fullwidth">
            {% if nextSeason %}
            <ul>    
                <li><a href="seasons/{{ nextSeason }}">Season {{ nextSeason }} →</a></li>
            </ul>
            {% endif %}
        </div>
    </div>
</nav>



