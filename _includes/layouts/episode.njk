---
layout: baseNavBar
---
<section class="hero">
    <div class="hero-body">
        <div class="container">
            <h1 class="title is-1"><a href="{{podcast_url}}">№ {{number}} {{ title }}</a></h1>
            <h2 class="subtitle is-5">Season {{season}}</h2>
        </div>
    </div>
    <div class="hero-foot">
        <div class="level">
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Date</p>
                    <p class="title">{{date | readableDate}}</p>
                </div>
            </div>

            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Hosts</p>
                    <p class="title">
                        {{ hosts | join(", ") }}
                        {%- if guest_hosts -%}
                        , {{ guest_hosts | join(", ") }}
                        {% endif %}
                    </p>
                </div>
            </div>

            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Category</p>
                    <p class="title category-{{category | slug}}">{{category}}</p>
                </div>
            </div>

            {% if series %}
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Series</p>
                    <p class="title">{{series}}</p>
                </div>
            </div>
            {% endif %}

            {% if time_loop_forward %}
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Time Looped as</p>
                    <p class="title">№
                        {% if time_loop_forward.url %}
                        <a href="{{time_loop_forward.url}}">{{time_loop_forward.number}}</a>
                        {% else %}
                        {{time_loop_forward.number}}
                        {% endif %}
                    </p>
                </div>
            </div>
            {% endif %}

            {% if time_loop_backward %}
            <div class="level-item has-text-centered">
                <div>
                    <p class="heading">Time Loop of</p>
                    <p class="title">№ 
                        {% if time_loop_backward.url %}
                        <a href="{{time_loop_backward.url}}">{{time_loop_backward.number}}</a>
                        {% else %}
                        {{time_loop_backward.number}}
                        {% endif %}
                    </p>
                </div>
            </div>
            {% endif %}
        </div>
    </div> 
</section>

<div class="episode-recommendation">
    {% if recommendation == 'yes' or recommendation == 'yes-timeloop' %}
        <article class="message is-success">
    {% elif recommendation == 'essential' or recommendation == 'essential-timeloop' %}
        <article class="message is-primary">
    {% elif recommendation == 'no' %}
        <article class="message is-danger">
    {% endif %}
        <div class="message-header">
            {% if recommendation == 'yes' %}
                <h2 class="title">Listen</h2>
            {% elif recommendation == 'yes-timeloop' %}
                <div>
                    <h2 class="title">Listen</h2>
                    <h3 class="subtitle is-5">
                        to Timeloop (<a href="{{time_loop_forward.url}}">№ {{time_loop_forward.number}}</a>)
                    </h3>
                </div>
            {% elif recommendation == 'essential' %}
                <h2 class="title">Essential</h2>
            {% elif recommendation == 'essential-timeloop' %}
                <div>
                    <h2 class="title">Essential</h2> 
                    <h3 class="subtitle is-5">
                        Listen to Timeloop (<a href="{{time_loop_forward.url}}">№ {{time_loop_forward.number}}</a>)
                    </h3>
                </div>
            {% elif recommendation == 'no' %}
                <h2 class="title">Skip</h2>
            {% endif %}
            <p>{{last_listen | readableDate}}</p>
        </div>
        <div class="message-body content">
            <div class="recommendation-reason">{{recommendation_reason | safe}}</div>
        </div>
    </article>
</div>

{% if spoilers %}
<article class="message is-warning spoilers">
    <div class="message-header">
        <h2 class="title">Spoilers</h2>
    </div>
    <div class="message-body content">
        This guide entry contains spoilers for:
        <ul>
        {% for spoiler in spoilers %}
            <li><strong>{{spoiler}}</strong></li>
        {% endfor %}
        </ul>
    </div>
</article>
{% endif %}

<div class="content">
    <div class="box episode-secondary-metadata">
        {% if notable_moments %}
        <h2>Notable Moments</h2>
        <ul class="notable-moments">
        {% for moment in notable_moments %}
            <li>{{moment}}</li>
        {% endfor %}
        </ul>
        {% endif %}

        {% if firsts %}
        <h2>Firsts</h2>
        <ul class="firsts">
        {% for first in firsts %}
            <li>{{first | safe}}</li>
        {% endfor %}
        </ul>
        {% endif %}

        {% if prophecy %}
        <h2>Prophecy</h2>
        <div class="prophecies">
            {% set prophecySet = prophecy %}
            {% include "_macros/prophecy.njk" %}
        </div>
        {% endif %}

        {% if future_episodes %}
            <h2>Future Episodes</h2>
            <ul class="future-episodes">
            {% for episode in future_episodes %}
                <li>{{episode | safe}}</li>
            {% endfor %}
            </ul>
        {% endif %}

        {% if celebrity_invites %}
        <h2>Celebrity Invites</h2>
        <ul class="celebrity-invites">
        {% for invite in celebrity_invites %}
            <li>{{invite}}</li>
        {% endfor %}
        </ul>
        {% endif %}
    </div>

    <article class="episode-content">
    {{ layoutContent | safe }}
    </article>

    {% if archivist_note %}
    <div class="columns">
        <div class="column is-half">
            <article class="archivist-note message">
                <div class="message-header">
                    <p>Archivist Note</p>
                </div>
                <div class="message-body">
                    {{archivist_note | safe}}
                </div>
            </article>
        </div>
    </div>
    {% endif %}
</div>

<nav class="columns episode-nav">
    <div class="column">
        <div class="tabs is-fullwidth">
            {% if previous.url %}
            <ul>
                <li><a href="{{ previous.url }}">← Previous</a></li>
                {# <li><a href="{{ '/' }}">← Previous in Series</a></li> #}
            </ul>
            {% endif %}
        </div>
    </div>
    <div class="column">
        <div class="tabs is-fullwidth">
            {% if next.url %}
            <ul>    
                {# <li><a href="{{ '/' }}">Next in Series →</a></li> #}
                <li><a href="{{ next.url }}">Next →</a></li>
            </ul>
            {% endif %}
        </div>
    </div>
</nav>