---
layout: layouts/base.njk
---
<h1 class="episode-title">№ {{number}} {{ title }}</h1>

<header class="episode-header">
    {{date | readableDate}} · {{ hosts | join(", ") }} · <a href="{{podcast_url}}">🎙️</a>
</header>

{% if notable_moments %}
<h2>Notable Moments</h2>
<ul class="notable-moments">
{% for moment in notable_moments %}
    <li>{{moment}}</li>
{% endfor %}
</ul>
{% endif %}

{% if firsts %}
<h2>Firsts</h2>
<ul class="firsts">
{% for first in firsts %}
    <li>{{first}}</li>
{% endfor %}
</ul>
{% endif %}

<article class="main-content">
{{ layoutContent | safe }}
</article>

<nav class="episode-nav">
    {% if previous.url %}
    <a href="{{ previous.url }}">← Previous</a>
    {% endif %}
    
    <a href="{{ '/' }}">← Previous in Series</a>
    
    {% if next.url %}
    <a href="{{ next.url }}">Next →</a>
    {% endif %}
    
    <a href="{{ '/' }}">Next in Series →</a>
</nav>