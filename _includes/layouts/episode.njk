---
layout: layouts/base.njk
---
<h1>№ {{number}} {{ title }}</h1>

<div class="episode-header">
    Date: {{date | readableDate}}
    URL: {{podcast_url}}
    Hosts: {{hosts}}
</div>

<h2>Notable Moments</h2>
<ul class="notable-moments">
{% for moment in notable_moments %}
    <li>{{moment}}</li>
{% endfor %}
</ul>

<h2>Firsts</h2>
<ul class="firsts">
{% for first in firsts %}
    <li>{{first}}</li>
{% endfor %}
</ul>

<article class="main-content">
{{ layoutContent | safe }}
</article>

<nav class="episode-nav">
    {% if previous.url %}
    <a href="{{ previous.url }}">← Previous</a>
    {% endif %}
    
    <a href="{{ '/' }}">← Previous in Series</a>
    
    {% if next.url %}
    <a href="{{ next.url }}">Next →</a>
    {% endif %}
    
    <a href="{{ '/' }}">Next in Series →</a>
</nav>