---
layout: layouts/base.njk
---
<section class="hero">
    <div class="hero-body">
        <div class="container">
            <h1 class="title is-1">‚Ññ {{number}} {{ title }}</h1>
            <h2 class="subtitle is-3">
                <a href="{{podcast_url}}">üéôÔ∏è (replace with play icon) </a> ¬∑ {{date | readableDate}} ¬∑ {{ hosts | join(", ") }}
            </h2>
        </div>
    </div>
</section>

<section class="columns">
    <div class="column category-{{category | slug}}">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">Category</p>
            </header>
            <div class="card-content">
                <div class="content">{{category}}</div>
            </div>
        </div>
    </div>

    {% if series %}
    <div class="column series">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">Series</p>
            </header>
            <div class="card-content">
                <div class="content">{{series}}</div>
            </div>
        </div>
    </div>
    {% endif %}

    {% if time_loop_forward %}
    <div class="column time-loop-forward">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">Time Looped as</p>
            </header>
            <div class="card-content">
                <div class="content">‚Ññ {{time_loop_forward}}</div>
            </div>
        </div>
    </div>
    {% endif %}

    {% if time_loop_backward %}
    <div class="column time-loop-backward">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">Time Loop of</p>
            </header>
            <div class="card-content">
                <div class="content">‚Ññ {{time_loop_backward}}</div>
            </div>
        </div>
    </div>
    {% endif %}
</section>

<article class="message recommendation-container">
    <div class="message-header">
        <p>Recommendation</p>
        <p>{{last_listen | readableDate}}</p>
    </div>
    <div class="message-body">
        <div class="recommendation {{recommendation}}">
        {% if recommendation == 'yes' %}
            Listen (ear icon)
        {% elif recommendation == 'yes-timeloop' %}
            Listen to Timeloop (Episode {{time_loop_forward}}) (ear icon)
        {% elif recommendation == 'essential' %}
            Essential (exlamation mark icon)
        {% elif recommendation == 'no' %}
            Skip (warning icon)
        {% endif %}
        </div>

        <div class="recommendation-reason">{{recommendation_reason}}</div>
    </div>
</article>

{% if notable_moments %}
<div class="notable-moments-container">
    <h2 class="title is-2">Notable Moments</h2>
    <ul class="notable-moments">
    {% for moment in notable_moments %}
        <li>{{moment}}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

{% if firsts %}
<div class="firsts-container">
    <h2 class="title is-2">Firsts</h2>
    <ul class="firsts">
    {% for first in firsts %}
        <li>{{first}}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

{% if prophecy %}
<div class="prophecies-container">
    <h2>Prophecy</h2>
    <div class="prophecies">
    {% for prediction in prophecy %}
        <div class="prophecy {{prediction.host}}">
            <span class="host">{{prediction.host}}</span>: <span class="prediction">{{prediction.prophecy}}</span>
        </div>
        <div class="veracity {{prediction.veracity}}">
            {{prediction.veracity | string | title}}: {{prediction.comments}}
        </div>
    {% endfor %}
    </div>
</div>
{% endif %}

{% if future_episodes %}
<div class="future-episodes-container">
    <h2>Future Episodes</h2>
    <ul class="future-episodes">
    {% for episode in future_episodes %}
        <li>{{episode}}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

{% if celebrity_invites %}
<div class="celebrity-invites-container">
    <h2>Celebrity Invites</h2>
    <ul class="celebrity-invites">
    {% for invite in celebrity_invites %}
        <li>{{invite}}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

<article class="episode-content">
{{ layoutContent | safe }}
</article>

{% if archivist_note %}
<article class="message archivist-note">
    <div class="message-header">
        <p>Archivist Note</p>
    </div>
    <div class="message-body">
        {{archivist_note}}
    </div>
</article>
{% endif %}

<nav class="episode-nav">
    {% if previous.url %}
    <a href="{{ previous.url }}">‚Üê Previous</a>
    {% endif %}
    
    <a href="{{ '/' }}">‚Üê Previous in Series</a>
    
    {% if next.url %}
    <a href="{{ next.url }}">Next ‚Üí</a>
    {% endif %}
    
    <a href="{{ '/' }}">Next in Series ‚Üí</a>
</nav>