---
layout: layouts/base.njk
---
<h1 class="episode-title">‚Ññ {{number}} {{ title }}</h1>

<header class="episode-header">
    <a href="{{podcast_url}}">üéôÔ∏è</a> &nbsp;&nbsp;¬∑&nbsp;&nbsp; {{date | readableDate}} &nbsp;&nbsp;¬∑&nbsp;&nbsp; {{ hosts | join(", ") }}
    
    <div class="category-{{category | slug}}">
        Category: {{category}}
    </div>
    
    {% if series %}
    <div class="series">
        Series: {{series}}
    </div>
    {% endif %}

    {% if time_loop_forward %}
    <div class="time-loop-forward">
        (Time Looped in ‚Ññ {{time_loop_forward}})
    </div>
    {% endif %}

    {% if time_loop_backward %}
    <div class="time-loop-backward">
        Time Loop of ‚Ññ {{time_loop_backward}}
    </div>
    {% endif %}
</header>

{% if notable_moments %}
<div class="notable-moments-container">
    <h2>Notable Moments</h2>
    <ul class="notable-moments">
    {% for moment in notable_moments %}
        <li>{{moment}}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

{% if firsts %}
<div class="firsts-container">
    <h2>Firsts</h2>
    <ul class="firsts">
    {% for first in firsts %}
        <li>{{first}}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

{% if prophecy %}
<div class="prophecies-container">
    <h2>Prophecy</h2>
    <div class="prophecies">
    {% for prediction in prophecy %}
        <div class="prophecy {{host}}">
            <span class="host">{{host}}</span>: <span class="prediction">{{prophecy}}</span>
        </div>
        <div class="veracity {{veracity}}">
            {{veracity | title}}: {{comments}}
        </div>
    {% endfor %}
    </div>
</div>
{% endif %}

<article class="episode-content">
{{ layoutContent | safe }}
</article>

<nav class="episode-nav">
    {% if previous.url %}
    <a href="{{ previous.url }}">‚Üê Previous</a>
    {% endif %}
    
    <a href="{{ '/' }}">‚Üê Previous in Series</a>
    
    {% if next.url %}
    <a href="{{ next.url }}">Next ‚Üí</a>
    {% endif %}
    
    <a href="{{ '/' }}">Next in Series ‚Üí</a>
</nav>