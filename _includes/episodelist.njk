	<li class="episodelist-item">
		<a href="{{ episode.url }}" class="episodelist-link">{{ episode.data.title }}</a> Â·
		<span class="episodelist-date">{{ episode.data.date | readableDate }}</span>
	</li>
{% endfor %}
</ol>