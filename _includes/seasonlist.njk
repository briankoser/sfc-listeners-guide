<div class="season-list">
	{% for season in seasonlist %}
	<div class="card season-card">
		<header class="card-header">
			<p class="card-header-title">
				<a href="/seasons/{{ season.number }}">Season {{ season.number }}</a>
			</p>
		</header>
		<div class="card-content">
			<div class="content columns">
				<div class="column is-two-thirds">
					{{ season.summary | safe }}
				</div>
				<div class="column is-one-third">
					<div class="level host-stats">
						<div class="level-item has-text-centered">
							<div>
								<p class="heading">Year</p>
								<p class="title">{{season.year}}</p>
							</div>
						</div>
						<div class="level-item has-text-centered">
							<div>
								<p class="heading">Episodes</p>
								<p class="title">{{season.count}}</p>
							</div>
						</div>
						<div class="level-item has-text-centered">
							<div>
								<p class="heading">Timeloops</p>
								<p class="title">{{season.timeloops}}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<footer class="card-footer">
			<a href="{{ season.first.url }}" class="card-footer-item">№ {{season.first.number}} {{season.first.title}}</a>
			<a href="{{ season.last.url }}" class="card-footer-item">№ {{season.last.number}} {{season.last.title}}</a>
		</footer>
	</div>
	{% endfor %}
</div>