---
layout: baseNavBar
pageTitle: Episodes
---
<h1 class="is-size-2">Episodes</h1>

<div class="episode-list">
    <div class="columns">
        <div class="column is-half">
            <div class="columns episode-filter-container">
                <div class="column is-11">
                    <div class="navbar episode-filter">
                        <nav class="navbar-menu is-active">
                            <div class="navbar-start">
                                <div class="navbar-item">
                                    <label class="radio is-size-4">
                                        <input type="radio" name="episodefilter" id="all" checked> All
                                    </label>
                                </div>
                                <div class="navbar-item">
                                    <label class="radio is-size-4">
                                        <input type="radio" name="episodefilter" id="essential"> Essential
                                    </label>
                                </div>
                                <div class="navbar-item">
                                    <label class="radio is-size-4">
                                        <input type="radio" name="episodefilter" id="listen"> Listen
                                    </label>
                                </div>
                                <div class="navbar-item">
                                    <label class="radio is-size-4">
                                        <input type="radio" name="episodefilter" id="skip"> Skip
                                    </label>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
                <div class="column is-1">
                    <div class="sort-button-container">
                        <svg id="sortEpisodes" class="feather feather-button is-large">
                            <use id="sortEpisodesIcon" xlink:href="/img/feather-sprite.svg#chevrons-down"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="column is-half">
            <div class="field has-addons">
                <p class="control has-icons-left">
                    <input type="search" id="searchbar" class="input is-large search-bar" placeholder="Search episodes">
                    <span class="icon is-small is-left">
                        {% icon "search" %}
                    </span>
                </p>
                <p class="control">
                    <button type="submit" id="searchbutton" class="button is-primary is-large" disabled>Search</button>
                </p>
            </div>
            <div id="searchfilled">
                <ol id="searchresults" class="search-results content"></ol>
            </div>
            <div id="searchempty" style="display:none;">
                <p>No results found
            </div>
            <div id="searchshort" style="display:none;">
                <p>Your search must be at least 4 characters
            </div>
        </div>
    </div>

    <div class="columns">
        <div class="column is-half">
            {% set episodelist = collections.episodes | reverse %}
            {% include "components/episodeList.njk" %}
        </div>
    </div>
</div>