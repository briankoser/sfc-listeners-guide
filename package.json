{
  "name": "sfc-listeners-guide",
  "version": "0.0.1",
  "description": "The Unofficial Sci-Fi Christian Podcast Listener's Guide",
  "private": true,
  "license": "MIT",
  "scripts": {
    "cache-bust": "node bustCache.js",
    "css-build": "node-sass _sass/main.scss css/main.css",
    "css-watch": "npm run css-build -- --watch",
    "search-index-build": "node buildLunrSearchIndex.js",
    "typography": "npx typogr --force _site _site-typogr",
    "build": "npx eleventy",
    "watch": "npx eleventy --serve",
    "serve": "http-server ./_site",
    "dev": "run-p watch css-build serve",
    "prod": "npm run css-build && npm run build && npm run cache-bust && npm run search-index-build && npm run typography"
  },
  "author": {
    "name": "Brian Koser",
    "url": "http://koser.us/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/briankoser/sfc-listeners-guide"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.3.5",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "typogr": "^0.6.8",
    "xml2js": "^0.4.19"
  },
  "dependencies": {
    "bulma": "^0.6.2",
    "bulmaswatch": "^0.6.2",
    "feather-icons": "^4.7.3",
    "lunr": "^2.3.0",
    "npm": "^5.10.0"
  }
}
